@model PerfumeStore.Models.Category
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Xóa danh mục";
}

<div class="d-flex align-items-center mb-4">
    <a asp-action="Index" class="btn btn-outline-secondary me-3">
        <i class="fas fa-arrow-left"></i>
    </a>
    <h4 class="mb-0">
        <i class="fas fa-trash me-2 text-danger"></i>Xóa danh mục
    </h4>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <!-- Warning Alert -->
        <div class="alert alert-warning border-0 shadow-sm mb-4">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-triangle fa-2x text-warning me-3"></i>
                <div>
                    <h6 class="alert-heading mb-1">Cảnh báo: Thao tác không thể hoàn tác!</h6>
                    <p class="mb-0">Bạn đang thực hiện xóa danh mục. Hãy chắc chắn rằng bạn muốn thực hiện thao tác này.</p>
                </div>
            </div>
        </div>

        <!-- Category Information -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white border-0">
                <h6 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2 text-primary"></i>Thông tin danh mục sẽ bị xóa
                </h6>
            </div>
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <div class="bg-danger bg-gradient rounded-circle d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="fas fa-tag text-white fa-2x"></i>
                        </div>
                    </div>
                    <div class="col">
                        <h5 class="fw-bold mb-1">@Model.CategoryName</h5>
                        <p class="text-muted mb-2">ID: @Model.CategoryId</p>
                        <div class="d-flex gap-3">
                            <span class="badge bg-info">
                                <i class="fas fa-box me-1"></i>@(ViewBag.ActualProductCount ?? Model.Products.Count) sản phẩm
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if ((ViewBag.ActualProductCount ?? Model.Products.Count) > 0)
        {
            <!-- Products Warning -->
            <div class="card border-danger shadow-sm mb-4">
                <div class="card-header bg-danger text-white border-0">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-exclamation-circle me-2"></i>Không thể xóa - Có sản phẩm liên quan
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger border-0 mb-3">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Không thể xóa:</strong> Danh mục này có <strong>@(ViewBag.ActualProductCount ?? Model.Products.Count) sản phẩm</strong> đang được phân loại. 
                        <br><small>Bạn cần di chuyển các sản phẩm sang danh mục khác hoặc xóa chúng trước khi có thể xóa danh mục này.</small>
                    </div>
                    
                    <h6 class="fw-semibold mb-3">Các sản phẩm trong danh mục:</h6>
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Tên sản phẩm</th>
                                    <th class="text-center">Giá</th>
                                    <th class="text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.Products.Take(10))
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-spray-can text-primary me-2"></i>
                                                <span>@product.ProductName</span>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <span class="text-success fw-semibold">
                                                @product.Price.ToString("N0") VNĐ
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <a href="#" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-edit me-1"></i>Chỉnh sửa
                                            </a>
                                        </td>
                                    </tr>
                                }
                                @if (Model.Products.Count > 10)
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted">
                                            <i class="fas fa-ellipsis-h me-1"></i>
                                            Và @(Model.Products.Count - 10) sản phẩm khác...
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="mt-3">
                        <h6 class="fw-semibold mb-2">Các bước cần thực hiện:</h6>
                        <ol class="list-group list-group-numbered">
                            <li class="list-group-item d-flex align-items-center">
                                <i class="fas fa-arrow-right text-primary me-2"></i>
                                Di chuyển sản phẩm sang danh mục khác
                            </li>
                            <li class="list-group-item d-flex align-items-center">
                                <i class="fas fa-trash text-danger me-2"></i>
                                Hoặc xóa các sản phẩm không cần thiết
                            </li>
                            <li class="list-group-item d-flex align-items-center">
                                <i class="fas fa-check text-success me-2"></i>
                                Sau đó mới có thể xóa danh mục
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
            
            <!-- Action Buttons - Disabled -->
            <div class="d-flex gap-2 justify-content-end">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Quay lại
                </a>
                <a asp-action="Details" asp-route-id="@Model.CategoryId" class="btn btn-outline-info">
                    <i class="fas fa-eye me-1"></i>Xem chi tiết
                </a>
                <button type="button" class="btn btn-danger" disabled>
                    <i class="fas fa-trash me-1"></i>Không thể xóa
                </button>
            </div>
        }
        else
        {
            <!-- Confirmation Form -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-light border-0">
                    <h6 class="card-title mb-0 text-success">
                        <i class="fas fa-check-circle me-2"></i>Có thể xóa danh mục
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-success border-0 mb-3">
                        <i class="fas fa-check-circle me-2"></i>
                        Danh mục này không có sản phẩm nào. Bạn có thể xóa an toàn.
                    </div>
                    
                    <div class="bg-light rounded-3 p-3 mb-3">
                        <h6 class="fw-semibold mb-2">Những gì sẽ xảy ra khi xóa:</h6>
                        <ul class="list-unstyled mb-0">
                            <li class="mb-1">
                                <i class="fas fa-times text-danger me-2"></i>
                                Danh mục "<strong>@Model.CategoryName</strong>" sẽ bị xóa vĩnh viễn
                            </li>
                            <li class="mb-1">
                                <i class="fas fa-database text-info me-2"></i>
                                Dữ liệu liên quan sẽ được làm sạch
                            </li>
                            <li class="mb-1">
                                <i class="fas fa-history text-warning me-2"></i>
                                Thao tác này không thể hoàn tác
                            </li>
                        </ul>
                    </div>
                    
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="CategoryId" />
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                            <label class="form-check-label fw-semibold" for="confirmDelete">
                                Tôi hiểu rằng thao tác này không thể hoàn tác và đồng ý xóa danh mục này.
                            </label>
                        </div>
                        
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Hủy
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.CategoryId" class="btn btn-outline-info">
                                <i class="fas fa-eye me-1"></i>Xem chi tiết
                            </a>
                            <button type="submit" class="btn btn-danger" id="deleteButton" disabled>
                                <i class="fas fa-trash me-1"></i>Xác nhận xóa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

<script>
// Enable/disable delete button based on checkbox
document.getElementById('confirmDelete')?.addEventListener('change', function() {
    const deleteButton = document.getElementById('deleteButton');
    if (deleteButton) {
        deleteButton.disabled = !this.checked;
    }
});

// Form submission confirmation
document.querySelector('form')?.addEventListener('submit', function(e) {
    if (!confirm('Bạn có CHẮC CHẮN muốn xóa danh mục "@Model.CategoryName"? Thao tác này KHÔNG THỂ HOÀN TÁC!')) {
        e.preventDefault();
        return false;
    }
});

// Keyboard shortcuts
document.addEventListener('keydown', function(e) {
    // Escape to go back
    if (e.key === 'Escape') {
        window.location.href = '@Url.Action("Index")';
    }
});

// Auto-focus on checkbox when page loads
document.addEventListener('DOMContentLoaded', function() {
    const checkbox = document.getElementById('confirmDelete');
    if (checkbox) {
        setTimeout(() => {
            checkbox.focus();
        }, 500);
    }
});
</script>

<style>
.card {
    border-radius: 12px;
}

.card-header {
    border-radius: 12px 12px 0 0 !important;
}

.alert {
    border-radius: 8px;
}

.list-group-item {
    border: none;
    background: transparent;
    padding: 0.5rem 0;
}

.table th {
    font-weight: 600;
    font-size: 0.875rem;
}

.form-check-input:checked {
    background-color: #dc3545;
    border-color: #dc3545;
}

.form-check-input:focus {
    border-color: #dc3545;
    box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25);
}

@@media (max-width: 768px) {
    .col-lg-8 {
        padding: 0 15px;
    }
    
    .d-flex.gap-2 {
        flex-direction: column;
    }
    
    .d-flex.gap-2 > * {
        margin-bottom: 0.5rem;
    }
}
</style>