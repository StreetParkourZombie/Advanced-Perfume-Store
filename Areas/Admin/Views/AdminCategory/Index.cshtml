@model PerfumeStore.Areas.Admin.Models.PagedResult<PerfumeStore.Models.Category>
@{
    ViewData["Title"] = "Quản lý danh mục";
    var totalCategories = ViewBag.TotalCategories is int tc ? tc : Model.TotalItems;
    var totalProducts = ViewBag.TotalCategoryProducts is int tp ? tp : Model.Items.Sum(c => c.Products.Count);
    var avgProducts = ViewBag.AverageProductsPerCategory is double ap
        ? ap
        : (totalCategories > 0 ? Math.Round((double)totalProducts / totalCategories, 1) : 0);
    var topCategoryName = ViewBag.TopCategoryName as string;
    var topCategoryProductCount = ViewBag.TopCategoryProductCount is int tpCount ? tpCount : 0;
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h4 class="mb-0">
        <i class="fas fa-list me-2 text-primary"></i>Quản lý danh mục
    </h4>
    <div class="d-flex gap-2">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Thêm danh mục
        </a>
        <button class="btn btn-outline-success" onclick="exportCategories()">
            <i class="fas fa-file-excel me-1"></i>Xuất Excel
        </button>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Statistics Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-gradient rounded-3 p-3">
                            <i class="fas fa-list text-white fa-lg"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Tổng danh mục</div>
                        <div class="fs-4 fw-bold text-primary">@totalCategories</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-gradient rounded-3 p-3">
                            <i class="fas fa-box text-white fa-lg"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Tổng sản phẩm</div>
                        <div class="fs-4 fw-bold text-success">@totalProducts</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-gradient rounded-3 p-3">
                            <i class="fas fa-chart-bar text-white fa-lg"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">TB sản phẩm/danh mục</div>
                        <div class="fs-4 fw-bold text-warning">
                            @avgProducts
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-info bg-gradient rounded-3 p-3">
                            <i class="fas fa-crown text-white fa-lg"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Danh mục hàng đầu</div>
                        <div class="fs-6 fw-bold text-info">
                            @(topCategoryName ?? "Chưa có")
                        </div>
                        <small class="text-muted">@topCategoryProductCount sản phẩm</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Categories Table -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-0 pb-0">
        <div class="row align-items-center">
            <div class="col">
                <h6 class="card-title mb-0">
                    <i class="fas fa-table me-2 text-secondary"></i>Danh sách danh mục
                </h6>
            </div>
            <div class="col-auto">
                <div class="input-group input-group-sm" style="width: 250px;">
                    <span class="input-group-text bg-light border-end-0">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    <input type="text" class="form-control border-start-0" placeholder="Tìm kiếm danh mục..." id="searchInput">
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" id="categoriesTable">
                <thead class="table-light">
                    <tr>
                        <th class="border-0 ps-4">#</th>
                        <th class="border-0">Tên danh mục</th>
                        <th class="border-0 text-center">Số sản phẩm</th>
                        <th class="border-0 text-center">Tỷ lệ</th>
                        <th class="border-0 text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model?.Items?.Any() ?? false)
                    {
                        var totalProductsOnPage = Model.Items.Sum(c => c.Products.Count);
                        @foreach (var item in Model.Items.Select((category, index) => new { category, index }))
                        {
                            var percentage = totalProductsOnPage > 0 ? (double)item.category.Products.Count / totalProductsOnPage * 100 : 0;
                            <tr>
                                <td class="ps-4">
                                    <span class="fw-semibold text-muted">@(item.index + 1)</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-gradient rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                            <i class="fas fa-tag text-white"></i>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@item.category.CategoryName</div>
                                            <small class="text-muted">ID: @item.category.CategoryId</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-@(item.category.Products.Count > 10 ? "success" : item.category.Products.Count > 5 ? "warning" : "secondary") rounded-pill">
                                        @item.category.Products.Count
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex align-items-center justify-content-center">
                                        <div class="progress me-2" style="width: 60px; height: 8px;">
                                            <div class="progress-bar bg-primary" style="width: @percentage.ToString("F1")%"></div>
                                        </div>
                                        <small class="text-muted">@percentage.ToString("F1")%</small>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.category.CategoryId" 
                                           class="btn btn-outline-info" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.category.CategoryId" 
                                           class="btn btn-outline-primary" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" 
                                                onclick="confirmDelete(@item.category.CategoryId, '@item.category.CategoryName', @item.category.Products.Count)"
                                                title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <div class="text-muted">
                                    <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                                    <h6>Chưa có danh mục nào</h6>
                                    <p class="mb-3">Hãy thêm danh mục đầu tiên để bắt đầu quản lý sản phẩm.</p>
                                    <a asp-action="Create" class="btn btn-primary">
                                        <i class="fas fa-plus me-1"></i>Thêm danh mục đầu tiên
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Areas/Admin/Views/Shared/_Pagination.cshtml", Model)

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>Xác nhận xóa
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">Bạn có chắc chắn muốn xóa danh mục <strong id="categoryNameToDelete"></strong>?</p>
                <div id="warningMessage" class="alert alert-warning d-none">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <span id="warningText"></span>
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Xóa
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
// Search functionality
document.getElementById('searchInput').addEventListener('keyup', function() {
    const searchTerm = this.value.toLowerCase();
    const tableRows = document.querySelectorAll('#categoriesTable tbody tr');
    
    tableRows.forEach(row => {
        const categoryName = row.cells[1].textContent.toLowerCase();
        if (categoryName.includes(searchTerm)) {
            row.style.display = '';
        } else {
            row.style.display = 'none';
        }
    });
});

// Delete confirmation
function confirmDelete(categoryId, categoryName, productCount) {
    document.getElementById('categoryNameToDelete').textContent = categoryName;
    document.getElementById('deleteForm').action = '@Url.Action("Delete")/' + categoryId;
    
    const warningMessage = document.getElementById('warningMessage');
    const warningText = document.getElementById('warningText');
    
    if (productCount > 0) {
        warningText.innerHTML = `<strong>Cảnh báo:</strong> Danh mục này có <strong>${productCount} sản phẩm</strong> đang được phân loại.<br>
                                <small>Bạn cần di chuyển các sản phẩm sang danh mục khác hoặc xóa chúng trước khi có thể xóa danh mục này.</small>`;
        warningMessage.classList.remove('d-none');
        document.querySelector('#deleteForm button[type="submit"]').disabled = true;
        document.querySelector('#deleteForm button[type="submit"]').innerHTML = '<i class="fas fa-ban me-1"></i>Không thể xóa';
    } else {
        warningMessage.classList.add('d-none');
        document.querySelector('#deleteForm button[type="submit"]').disabled = false;
        document.querySelector('#deleteForm button[type="submit"]').innerHTML = '<i class="fas fa-trash me-1"></i>Xóa';
    }
    
    new bootstrap.Modal(document.getElementById('deleteModal')).show();
}

// Export functionality
function exportCategories() {
    // Implement export logic here
    alert('Chức năng xuất Excel sẽ được triển khai sau.');
}

// Auto-hide alerts
setTimeout(function() {
    const alerts = document.querySelectorAll('.alert');
    alerts.forEach(alert => {
        if (alert.classList.contains('show')) {
            bootstrap.Alert.getOrCreateInstance(alert).close();
        }
    });
}, 5000);
</script>

