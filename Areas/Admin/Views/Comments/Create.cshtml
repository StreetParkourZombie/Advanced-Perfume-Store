@model PerfumeStore.Areas.Admin.Models.Comment

@{
    ViewData["Title"] = "Tạo bình luận mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">Tạo bình luận mới</h1>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="ProductId" class="form-label">Sản phẩm</label>
                            <select asp-for="ProductId" class="form-select" required>
                                <option value="">-- Chọn sản phẩm --</option>
                                @foreach (var product in ViewBag.Products)
                                {
                                    <option value="@product.ProductId" selected="@(Model.ProductId == product.ProductId)">
                                        @product.ProductName
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="ProductId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CustomerId" class="form-label">Khách hàng</label>
                            <select asp-for="CustomerId" class="form-select" required>
                                <option value="">-- Chọn khách hàng --</option>
                                @foreach (var customer in ViewBag.Customers)
                                {
                                    <option value="@customer.CustomerId">
                                        @customer.Name - @customer.Email
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="CustomerId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Rating" class="form-label">Đánh giá (1-5 sao)</label>
                            <select asp-for="Rating" class="form-select">
                                <option value="5" selected>5 sao - Xuất sắc</option>
                                <option value="4">4 sao - Tốt</option>
                                <option value="3">3 sao - Trung bình</option>
                                <option value="2">2 sao - Kém</option>
                                <option value="1">1 sao - Rất kém</option>
                            </select>
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label">Nội dung bình luận</label>
                            <textarea asp-for="Content" class="form-control" rows="5" placeholder="Nhập nội dung bình luận..."></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="hidden" name="IsPublished" value="false" />
                            <input type="checkbox" name="IsPublished" value="true" class="form-check-input" id="isPublished" checked>
                            <label class="form-check-label" for="isPublished">
                                Hiển thị bình luận ngay (Đã phê duyệt)
                            </label>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Tạo bình luận</button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="alert alert-info">
                <h6><i class="fas fa-info-circle me-2"></i>Hướng dẫn</h6>
                <ul class="mb-0">
                    <li>Chọn sản phẩm và khách hàng</li>
                    <li>Mỗi khách hàng chỉ có thể bình luận 1 lần cho 1 sản phẩm</li>
                    <li>Đánh giá từ 1-5 sao</li>
                    <li>Có thể phê duyệt ngay hoặc để chờ duyệt</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

