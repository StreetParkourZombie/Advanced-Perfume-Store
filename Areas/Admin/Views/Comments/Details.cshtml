@model List<PerfumeStore.Areas.Admin.Models.ViewModels.CommentDetailsVM>

@{
    ViewData["Title"] = "Chi tiết bình luận";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var product = ViewBag.Product as PerfumeStore.Areas.Admin.Models.Product;
}

<div class="container-fluid px-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0">Bình luận: @product?.ProductName</h1>
                    <p class="text-muted mb-0">
                        Thương hiệu: @product?.Brand?.BrandName | 
                        Danh mục: @string.Join(", ", product?.Categories?.Select(c => c.CategoryName) ?? new List<string>())
                    </p>
                </div>
                <div>
                    <a href="@Url.Action("Create", new { productId = product?.ProductId })" class="btn btn-primary me-2">
                        <i class="fas fa-plus me-1"></i>Thêm bình luận
                    </a>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter by status -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="btn-group" role="group">
                <a href="@Url.Action("Details", new { productId = product?.ProductId })" 
                   class="btn @(ViewBag.IsPublished == null ? "btn-primary" : "btn-outline-primary")">
                    Tất cả (@Model.Count)
                </a>
                <a href="@Url.Action("Details", new { productId = product?.ProductId, isPublished = true })" 
                   class="btn @(ViewBag.IsPublished == true ? "btn-success" : "btn-outline-success")">
                    Đã duyệt (@Model.Count(c => c.IsPublished == true))
                </a>
                <a href="@Url.Action("Details", new { productId = product?.ProductId, isPublished = false })" 
                   class="btn @(ViewBag.IsPublished == false ? "btn-warning" : "btn-outline-warning")">
                    Chờ duyệt (@Model.Count(c => c.IsPublished != true))
                </a>
            </div>
        </div>
    </div>

    <!-- Comments List -->
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var comment in Model)
            {
                <div class="col-12 mb-3">
                    <div class="card @(comment.IsPublished == true ? "border-success" : "border-warning")">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div>
                                <strong>@comment.CustomerName</strong>
                                <small class="text-muted ms-2">(@comment.CustomerEmail)</small>
                                <span class="ms-3">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="fas fa-star @(i <= comment.Rating ? "text-warning" : "text-muted")"></i>
                                    }
                                </span>
                            </div>
                            <div>
                                @if (comment.IsPublished == true)
                                {
                                    <span class="badge bg-success me-2">Đã duyệt</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark me-2">Chờ duyệt</span>
                                }
                                <small class="text-muted">@comment.CommentDate.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="mb-3">@(comment.Content ?? "(Không có nội dung)")</p>
                            <div class="d-flex gap-2">
                                <a href="@Url.Action("Edit", new { productId = comment.ProductId, customerId = comment.CustomerId })" 
                                   class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit me-1"></i>Sửa
                                </a>
                                @if (comment.IsPublished != true)
                                {
                                    <button type="button" class="btn btn-sm btn-success approve-comment-btn" 
                                            data-product-id="@comment.ProductId" 
                                            data-customer-id="@comment.CustomerId">
                                        <i class="fas fa-check me-1"></i>Phê duyệt
                                    </button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-sm btn-secondary hide-comment-btn" 
                                            data-product-id="@comment.ProductId" 
                                            data-customer-id="@comment.CustomerId">
                                        <i class="fas fa-eye-slash me-1"></i>Ẩn
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <p class="mb-0">Không có bình luận nào</p>
        </div>
    }
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Xử lý nút Phê duyệt
        document.querySelectorAll('.approve-comment-btn').forEach(function(button) {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                e.stopImmediatePropagation();
                
                const productId = this.getAttribute('data-product-id');
                const customerId = this.getAttribute('data-customer-id');
                
                if (!confirm('Bạn có chắc muốn phê duyệt bình luận này?')) {
                    return false;
                }
                
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                
                const formData = new FormData();
                formData.append('productId', productId);
                formData.append('customerId', customerId);
                if (token) {
                    formData.append('__RequestVerificationToken', token);
                }
                
                fetch('@Url.Action("Approve")', {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: formData
                })
                .then(function(response) {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(function(data) {
                    if (data.success) {
                        // Reload trang hiện tại để cập nhật trạng thái
                        window.location.reload();
                    } else {
                        alert(data.message || 'Có lỗi xảy ra');
                    }
                })
                .catch(function(error) {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra khi phê duyệt bình luận');
                });
                
                return false;
            });
        });
        
        // Xử lý nút Ẩn
        document.querySelectorAll('.hide-comment-btn').forEach(function(button) {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                e.stopImmediatePropagation();
                
                const productId = this.getAttribute('data-product-id');
                const customerId = this.getAttribute('data-customer-id');
                
                if (!confirm('Bạn có chắc muốn ẩn bình luận này?')) {
                    return false;
                }
                
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                
                const formData = new FormData();
                formData.append('productId', productId);
                formData.append('customerId', customerId);
                if (token) {
                    formData.append('__RequestVerificationToken', token);
                }
                
                fetch('@Url.Action("Hide")', {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: formData
                })
                .then(function(response) {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(function(data) {
                    if (data.success) {
                        // Reload trang hiện tại để cập nhật trạng thái
                        window.location.reload();
                    } else {
                        alert(data.message || 'Có lỗi xảy ra');
                    }
                })
                .catch(function(error) {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra khi ẩn bình luận');
                });
                
                return false;
            });
        });
    });
</script>

<style>
    .card {
        transition: transform 0.2s;
    }
    
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
</style>

@Html.AntiForgeryToken()


