@model PerfumeStore.Areas.Admin.Models.Coupon

@{
    ViewData["Title"] = "Thêm Coupon mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white text-center">
                <h5 class="mb-0">Thêm Coupon mới</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">

                    <div class="mb-3">
                        <label asp-for="Code" class="form-label fw-semibold"></label>
                        <input asp-for="Code" class="form-control" placeholder="Nhập code coupon" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DiscountAmount" class="form-label fw-semibold"></label>
                        <input asp-for="DiscountAmount" type="number" min="0" max="9999999.99" step="0.01" class="form-control" placeholder="Nhập số tiền giảm" />
                        <span asp-validation-for="DiscountAmount" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ExpiryDate" class="form-label fw-semibold"></label>
                        <input asp-for="ExpiryDate" type="date" class="form-control" />
                        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="IsUsed" class="form-check-input" />
                        <label asp-for="IsUsed" class="form-check-label">Đã sử dụng</label>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary px-4 me-2"><i class="bi bi-save"></i> Lưu</button>
                        <a asp-action="Index" class="btn btn-secondary px-4"><i class="bi bi-arrow-left"></i> Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
}
