@model PerfumeStore.Areas.Admin.Models.Coupon

@{
    ViewData["Title"] = "Xóa Coupon";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-danger text-white text-center">
                <h5 class="mb-0">Xóa Coupon</h5>
            </div>
            <div class="card-body text-center">
                <p>Bạn có chắc chắn muốn xóa coupon <strong>@Model.Code</strong> không?</p>
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="CouponId" />
                    <button type="submit" class="btn btn-danger px-4 me-2"><i class="bi bi-trash"></i> Xóa</button>
                    <a asp-action="Index" class="btn btn-secondary px-4"><i class="bi bi-arrow-left"></i> Hủy</a>
                </form>
            </div>
        </div>
    </div>
</div>
