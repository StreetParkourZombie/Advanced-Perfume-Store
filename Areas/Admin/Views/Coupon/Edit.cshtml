@model PerfumeStore.Areas.Admin.Models.Coupon

@{
    ViewData["Title"] = "Sửa Coupon";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-warning text-white text-center">
                <h5 class="mb-0">Sửa Coupon</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="CouponId" />
                    <!-- Các input giống Create.cshtml -->
                    <div class="mb-3">
                        <label asp-for="Code" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <input asp-for="Code" class="form-control" maxlength="30" minlength="30" />
                            <button class="btn btn-outline-secondary" type="button" id="btnGenerateCode">
                                <i class="bi bi-magic"></i> Tạo mã
                            </button>
                        </div>
                        <div class="form-text">Mã gồm 30 ký tự chữ hoa và số.</div>
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DiscountAmount" class="form-label fw-semibold"></label>
                        <input asp-for="DiscountAmount" type="number" min="0.01" max="9999999.99" step="0.01" class="form-control" required />
                        <span asp-validation-for="DiscountAmount" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="CustomerId" class="form-label fw-semibold">Gán cho khách hàng</label>
                        <select asp-for="CustomerId" class="form-select" asp-items="ViewBag.CustomerOptions"></select>
                        <div class="form-text">Tùy chọn: thay đổi khách hàng sở hữu coupon này.</div>
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ExpiryDate" class="form-label fw-semibold"></label>
                        <input asp-for="ExpiryDate" type="date" class="form-control" required />
                        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="IsUsed" class="form-check-input" />
                        <label asp-for="IsUsed" class="form-check-label">Đã sử dụng</label>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary px-4 me-2"><i class="bi bi-save"></i> Lưu</button>
                        <a asp-action="Index" class="btn btn-secondary px-4"><i class="bi bi-arrow-left"></i> Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (() => {
            const btn = document.getElementById('btnGenerateCode');
            const input = document.getElementById('Code');
            if (!btn || !input) {
                return;
            }

            const originalLabel = btn.innerHTML;
            btn.addEventListener('click', async () => {
                btn.disabled = true;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>Đang tạo';

                try {
                    const response = await fetch('@Url.Action("GenerateCode", "Coupon", new { area = "Admin" })');
                    if (!response.ok) {
                        throw new Error('Request failed');
                    }
                    const data = await response.json();
                    if (data?.code) {
                        input.value = data.code;
                        input.dispatchEvent(new Event('input'));
                    }
                } catch (error) {
                    console.error(error);
                    alert('Không thể tạo mã. Vui lòng thử lại.');
                } finally {
                    btn.disabled = false;
                    btn.innerHTML = originalLabel;
                }
            });
        })();
    </script>
}
