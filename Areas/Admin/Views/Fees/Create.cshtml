@model PerfumeStore.Areas.Admin.Models.Fee

@{
    ViewData["Title"] = "Tạo khoản phí mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">Tạo khoản phí mới</h1>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Tên khoản phí</label>
                            <select asp-for="Name" class="form-select" required>
                                <option value="">-- Chọn loại khoản phí --</option>
                                <option value="VAT">VAT (Thuế GTGT)</option>
                                <option value="Shipping">Phí vận chuyển</option>
                            </select>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Value" class="form-label">Giá trị</label>
                            <div class="input-group">
                                <input asp-for="Value" class="form-control" type="number" 
                                       step="0.01" min="0" required id="valueInput" />
                                <span class="input-group-text" id="valueUnit">VNĐ</span>
                            </div>
                            <span asp-validation-for="Value" class="text-danger"></span>
                            <small class="form-text text-muted" id="valueHint"></small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập mô tả..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Tạo khoản phí</button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="alert alert-info">
                <h6><i class="fas fa-info-circle me-2"></i>Hướng dẫn</h6>
                <ul class="mb-0">
                    <li><strong>VAT:</strong> Giá trị từ 0-100 phần trăm. Áp dụng cho tất cả đơn hàng.</li>
                    <li><strong>Phí vận chuyển:</strong> Chỉ áp dụng khi đơn hàng &lt; 5,000,000 VNĐ.</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById('Name').addEventListener('change', function() {
            const name = this.value;
            const valueInput = document.getElementById('valueInput');
            const valueUnit = document.getElementById('valueUnit');
            const valueHint = document.getElementById('valueHint');
            
            if (name === 'VAT') {
                valueInput.step = '0.01';
                valueInput.min = '0';
                valueInput.max = '100';
                valueUnit.textContent = '%';
                valueHint.textContent = 'VAT phải từ 0 đến 100 phần trăm';
            } else if (name === 'Shipping') {
                valueInput.step = '1000';
                valueInput.min = '0';
                valueInput.max = '';
                valueUnit.textContent = 'VNĐ';
                valueHint.textContent = 'Phí vận chuyển chỉ áp dụng khi đơn hàng < 5,000,000 VNĐ';
            } else {
                valueInput.step = '0.01';
                valueInput.min = '0';
                valueInput.max = '';
                valueUnit.textContent = 'VNĐ';
                valueHint.textContent = '';
            }
        });
    </script>
}


