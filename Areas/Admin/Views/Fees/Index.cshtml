@model List<PerfumeStore.Areas.Admin.Models.Fee>

@{
    ViewData["Title"] = "Quản lý khoản phí";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">Quản lý khoản phí</h1>
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Thêm khoản phí
                </a>
            </div>
        </div>
    </div>

    <!-- Info Cards -->
    <div class="row mb-4">
        @{
            var vatFee = Model.FirstOrDefault(f => f.Name == "VAT");
            var shippingFee = Model.FirstOrDefault(f => f.Name == "Shipping");
        }
        <div class="col-md-6">
            <div class="card border-primary">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-percent text-primary me-2"></i>VAT (Thuế GTGT)
                    </h5>
                    @if (vatFee != null)
                    {
                        <p class="card-text">
                            <strong>Giá trị:</strong> <span class="badge bg-primary">@vatFee.Value%</span>
                        </p>
                        <p class="card-text text-muted small">@vatFee.Description</p>
                        <a href="@Url.Action("Edit", new { id = vatFee.FeeId })" class="btn btn-sm btn-primary">
                            <i class="fas fa-edit me-1"></i>Chỉnh sửa
                        </a>
                    }
                    else
                    {
                        <p class="card-text text-muted">Chưa được cấu hình</p>
                        <a href="@Url.Action("Create")" class="btn btn-sm btn-primary">
                            <i class="fas fa-plus me-1"></i>Tạo VAT
                        </a>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-success">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-shipping-fast text-success me-2"></i>Phí vận chuyển
                    </h5>
                    @if (shippingFee != null)
                    {
                        <p class="card-text">
                            <strong>Giá trị:</strong> <span class="badge bg-success">@string.Format("{0:N0}", shippingFee.Value) VNĐ</span>
                        </p>
                        <p class="card-text text-muted small">@shippingFee.Description</p>
                        
                        <!-- Form chỉnh sửa ngưỡng trực tiếp -->
                        <form asp-action="UpdateThreshold" method="post" class="mt-3" id="thresholdForm-@shippingFee.FeeId">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="feeId" value="@shippingFee.FeeId" />
                            <div class="mb-2">
                                <label class="form-label small fw-bold">Ngưỡng áp dụng:</label>
                                <div class="input-group input-group-sm">
                                    <input type="number" 
                                           name="threshold" 
                                           class="form-control" 
                                           step="1000" 
                                           min="0" 
                                           value="@(shippingFee.Threshold?.ToString("F0") ?? "5000000")"
                                           id="thresholdInput-@shippingFee.FeeId" />
                                    <span class="input-group-text">VNĐ</span>
                                </div>
                                <small class="text-muted">Phí vận chuyển chỉ áp dụng khi đơn hàng &lt; ngưỡng này</small>
                            </div>
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-sm btn-success">
                                    <i class="fas fa-save me-1"></i>Lưu ngưỡng
                                </button>
                                <a href="@Url.Action("Edit", new { id = shippingFee.FeeId })" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-edit me-1"></i>Chỉnh sửa đầy đủ
                                </a>
                            </div>
                        </form>
                    }
                    else
                    {
                        <p class="card-text text-muted">Chưa được cấu hình</p>
                        <a href="@Url.Action("Create")" class="btn btn-sm btn-success">
                            <i class="fas fa-plus me-1"></i>Tạo Shipping
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Fees Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Danh sách khoản phí</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên</th>
                                <th>Giá trị</th>
                                <th>Mô tả</th>
                                <th class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var fee in Model)
                            {
                                <tr>
                                    <td>@fee.FeeId</td>
                                    <td>
                                        <strong>@fee.Name</strong>
                                        @if (fee.Name == "VAT")
                                        {
                                            <span class="badge bg-primary ms-2">Mặc định</span>
                                        }
                                        else if (fee.Name == "Shipping")
                                        {
                                            <span class="badge bg-success ms-2">Mặc định</span>
                                        }
                                    </td>
                                    <td>
                                        @if (fee.Name == "VAT")
                                        {
                                            <span class="badge bg-primary">@fee.Value%</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@string.Format("{0:N0}", fee.Value) VNĐ</span>
                                        }
                                    </td>
                                    <td>@fee.Description</td>
                                    <td class="text-center">
                                        <a href="@Url.Action("Edit", new { id = fee.FeeId })" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit me-1"></i>Sửa
                                        </a>
                                        @if (fee.Name != "VAT" && fee.Name != "Shipping")
                                        {
                                            <button type="button" class="btn btn-sm btn-danger" 
                                                    onclick="deleteFee(@fee.FeeId, '@fee.Name')">
                                                <i class="fas fa-trash me-1"></i>Xóa
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <p class="mb-0">Chưa có khoản phí nào. Hãy tạo VAT và Shipping fee!</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteFee(id, name) {
            if (confirm(`Bạn có chắc muốn xóa khoản phí "${name}"?`)) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("Delete")';
                
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                if (token) {
                    const tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = token;
                    form.appendChild(tokenInput);
                }
                
                const idInput = document.createElement('input');
                idInput.type = 'hidden';
                idInput.name = 'id';
                idInput.value = id;
                form.appendChild(idInput);
                
                document.body.appendChild(form);
                form.submit();
            }
        }

        // Xử lý form cập nhật threshold
        document.querySelectorAll('form[id^="thresholdForm-"]').forEach(function(form) {
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const formData = new FormData(form);
                const feeId = formData.get('feeId');
                const threshold = formData.get('threshold');
                
                fetch('@Url.Action("UpdateThreshold")', {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message || 'Đã cập nhật ngưỡng thành công!');
                        location.reload(); // Reload để cập nhật hiển thị
                    } else {
                        alert(data.message || 'Có lỗi xảy ra');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra khi cập nhật ngưỡng');
                });
            });
        });
    </script>
}

@Html.AntiForgeryToken()

