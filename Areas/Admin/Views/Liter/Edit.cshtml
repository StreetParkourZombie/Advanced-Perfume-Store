@model PerfumeStore.Areas.Admin.Models.Liter

@{
    ViewData["Title"] = "Chỉnh sửa dung tích";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Chỉnh sửa dung tích</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit" asp-route-id="@Model.LiterId" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="LiterId" />

                <div class="mb-3">
                    <label asp-for="LiterNumber" class="form-label fw-semibold"></label>
                    <input asp-for="LiterNumber" class="form-control" placeholder="Nhập dung tích (ml)" />
                    <span asp-validation-for="LiterNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LiterDescription" class="form-label fw-semibold"></label>
                    <input asp-for="LiterDescription" class="form-control" placeholder="Mô tả dung tích" />
                    <span asp-validation-for="LiterDescription" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LiterPrice" class="form-label fw-semibold"></label>
                    <input asp-for="LiterPrice" class="form-control price-input" placeholder="Giá dung tích" />
                    <span asp-validation-for="LiterPrice" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelectorAll('.price-input').forEach(input => {
            input.addEventListener('input', function () {
                let value = this.value.replace(/\D/g, "");
                if (value) {
                    value = parseInt(value).toLocaleString('vi-VN');
                    this.value = value;
                }
            });
            input.form.addEventListener('submit', function () {
                input.value = input.value.replace(/\./g, "").replace(/,/g, "");
            });
        });
    </script>
}
