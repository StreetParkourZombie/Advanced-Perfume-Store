@model PerfumeStore.Areas.Admin.Models.PagedResult<PerfumeStore.Areas.Admin.Models.Liter>

@{
    ViewData["Title"] = "Quản lý dung tích (Liter)";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-3">Quản lý Dung Tích (Liter)</h2>

<a asp-area="Admin" asp-controller="Liter" asp-action="Create" class="btn btn-primary mb-3">
    + Thêm dung tích mới
</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th style="width: 80px;">ID</th>
            <th>Dung tích (ml)</th>
			<th>Mô tả</th>
			<th>Giá (VNĐ)</th>
            <th style="width: 150px;">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.LiterId</td>
                <td>@item.LiterNumber</td>
                <td>@item.LiterDescription</td>
                <td>@item.LiterPrice</td>
                <td>
                    <a asp-area="Admin" asp-controller="Liter" asp-action="Edit" asp-route-id="@item.LiterId" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-area="Admin" asp-controller="Liter" asp-action="Delete" asp-route-id="@item.LiterId" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xóa không?')">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@await Html.PartialAsync("~/Areas/Admin/Views/Shared/_Pagination.cshtml", Model)
