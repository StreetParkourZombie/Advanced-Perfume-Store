@model PerfumeStore.Areas.Admin.Models.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">Chi tiết đơn hàng #@Model.OrderId</h1>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Order Info -->
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Thông tin đơn hàng</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Mã đơn:</strong> #@Model.OrderId</p>
                            <p><strong>Ngày đặt:</strong> @Model.OrderDate?.ToString("dd/MM/yyyy HH:mm")</p>
                            <p><strong>Trạng thái:</strong> 
                                <span class="badge 
                                    @(Model.Status == "Đã giao hàng" ? "bg-success" : 
                                      Model.Status == "Đã hủy" ? "bg-danger" : 
                                      Model.Status == "Chờ xác nhận" ? "bg-warning" : "bg-info")">
                                    @Model.Status
                                </span>
                            </p>
                            <p><strong>Phương thức thanh toán:</strong> @Model.PaymentMethod</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Khách hàng:</strong> @Model.Customer?.Name</p>
                            <p><strong>Email:</strong> @Model.Customer?.Email</p>
                            <p><strong>Điện thoại:</strong> @Model.Customer?.Phone</p>
                            @if (Model.Coupon != null)
                            {
                                <p><strong>Mã giảm giá:</strong> @Model.Coupon.Code</p>
                            }
                        </div>
                    </div>
                    @if (!string.IsNullOrWhiteSpace(Model.Notes))
                    {
                        <hr>
                        <p><strong>Ghi chú:</strong> @Model.Notes</p>
                    }
                </div>
            </div>

            <!-- Shipping Address -->
            @if (Model.Address != null)
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Địa chỉ giao hàng</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Người nhận:</strong> @Model.Address.RecipientName</p>
                        <p><strong>Điện thoại:</strong> @Model.Address.Phone</p>
                        <p><strong>Địa chỉ:</strong> @Model.Address.AddressLine, @Model.Address.Ward, @Model.Address.District, @Model.Address.Province</p>
                    </div>
                </div>
            }

            <!-- Order Items -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Sản phẩm trong đơn hàng</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Đơn giá</th>
                                    <th>Số lượng</th>
                                    <th>Tổng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detail in Model.OrderDetails)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (detail.Product?.ProductImages?.FirstOrDefault() != null)
                                                {
                                                    <img src="@Url.Action("GetImage", "Products", new { imageId = detail.Product.ProductImages.First().ImageId })" 
                                                         alt="@detail.Product.ProductName" 
                                                         class="me-3" 
                                                         style="width: 60px; height: 60px; object-fit: cover;">
                                                }
                                                <div>
                                                    <div><strong>@detail.Product?.ProductName</strong></div>
                                                    <small class="text-muted">@detail.Product?.Brand?.BrandName</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@string.Format("{0:N0}", detail.UnitPrice) VNĐ</td>
                                        <td>@detail.Quantity</td>
                                        <td>@string.Format("{0:N0}", detail.TotalPrice) VNĐ</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="3" class="text-end">Tổng cộng:</th>
                                    <th>@string.Format("{0:N0}", Model.TotalAmount) VNĐ</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Thao tác</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Edit", new { id = Model.OrderId })" class="btn btn-warning">Sửa trạng thái</a>
                        @if (Model.Status != "Đã hủy")
                        {
                            <button type="button" class="btn btn-danger" onclick="cancelOrder()">Hủy đơn hàng</button>
                        }
                        <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function cancelOrder() {
    if (confirm('Bạn có chắc chắn muốn hủy đơn hàng này?')) {
        const reason = prompt('Vui lòng nhập lý do hủy đơn hàng:');
        if (reason !== null) {
            fetch('@Url.Action("Cancel", new { id = Model.OrderId })', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': '@ViewContext.HttpContext.Request.Headers["X-CSRF-TOKEN"]'
                },
                body: JSON.stringify({ reason: reason })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert(data.message);
                    location.reload();
                } else {
                    alert(data.message);
                }
            });
        }
    }
}
</script>
