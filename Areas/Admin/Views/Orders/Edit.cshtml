@model PerfumeStore.Areas.Admin.Models.Order

@{
    ViewData["Title"] = "Chỉnh sửa đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">Chỉnh sửa đơn hàng #@Model.OrderId</h1>
                <a href="@Url.Action("Details", new { id = Model.OrderId })" class="btn btn-secondary">Quay lại</a>
            </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="OrderId" />
                        
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label">Trạng thái đơn hàng</label>
                            <select asp-for="Status" class="form-select">
                                @foreach (var status in ViewBag.Statuses)
                                {
                                    <option value="@status">@status</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">Ghi chú</label>
                            <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Cập nhật</button>
                            <a href="@Url.Action("Details", new { id = Model.OrderId })" class="btn btn-secondary">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Thông tin đơn hàng</h5>
                </div>
                <div class="card-body">
                    <p><strong>Mã đơn:</strong> #@Model.OrderId</p>
                    <p><strong>Khách hàng:</strong> @Model.Customer?.Name</p>
                    <p><strong>Ngày đặt:</strong> @Model.OrderDate?.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong>Tổng tiền:</strong> @string.Format("{0:N0}", Model.TotalAmount) VNĐ</p>
                    <p><strong>Phương thức:</strong> @Model.PaymentMethod</p>
                </div>
            </div>
        </div>
    </div>
</div>






