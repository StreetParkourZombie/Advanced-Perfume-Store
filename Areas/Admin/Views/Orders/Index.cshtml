@model PerfumeStore.Areas.Admin.Models.PagedResult<PerfumeStore.Areas.Admin.Models.Order>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">Quản lý đơn hàng</h1>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Tìm kiếm</label>
                    <input type="text" name="searchName" class="form-control" value="@ViewBag.SearchName" placeholder="Tên khách hàng, email, SĐT...">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Trạng thái</label>
                    <select name="status" class="form-select">
                        <option value="">Tất cả</option>
                        @foreach (var status in ViewBag.Statuses)
                        {
                            <option value="@status" selected="@(ViewBag.Status == status)">@status</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Từ ngày</label>
                    <input type="date" name="fromDate" class="form-control" value="@ViewBag.FromDate">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Đến ngày</label>
                    <input type="date" name="toDate" class="form-control" value="@ViewBag.ToDate">
                </div>
                <div class="col-md-3 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-primary">Lọc</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Reset</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="card">
        <div class="card-body">
            @if (Model?.Items?.Any() ?? false)
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Mã đơn</th>
                                <th>Khách hàng</th>
                                <th>Ngày đặt</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Items)
                            {
                                <tr>
                                    <td>#@order.OrderId</td>
                                    <td>
                                        <div>@order.Customer?.Name</div>
                                        <small class="text-muted">@order.Customer?.Email</small>
                                    </td>
                                    <td>@order.OrderDate?.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@string.Format("{0:N0}", order.TotalAmount) VNĐ</td>
                                    <td>
                                        <span class="badge 
                                            @(order.Status == "Đã giao hàng" ? "bg-success" : 
                                              order.Status == "Đã hủy" ? "bg-danger" : 
                                              order.Status == "Chờ xác nhận" ? "bg-warning" : "bg-info")">
                                            @order.Status
                                        </span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", new { id = order.OrderId })" class="btn btn-sm btn-info">Chi tiết</a>
                                        <a href="@Url.Action("Edit", new { id = order.OrderId })" class="btn btn-sm btn-warning">Sửa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <p class="mb-0">Không có đơn hàng nào</p>
                </div>
            }
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Areas/Admin/Views/Shared/_Pagination.cshtml", Model)

<style>
    .table th {
        background-color: #f8f9fa;
        font-weight: 600;
    }
</style>
