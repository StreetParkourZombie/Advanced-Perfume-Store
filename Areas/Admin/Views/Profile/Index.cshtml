@model IEnumerable<PerfumeStore.Areas.Admin.Models.Customer>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h5 class="mb-0">Quản lý khách hàng</h5>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Search Form -->
<div class="panel mb-3">
    <form method="get" asp-area="Admin" asp-controller="Profile" asp-action="Index" class="row g-3">
        <div class="col-md-4">
            <label class="form-label">Tìm kiếm theo tên</label>
            <input type="text" name="searchName" class="form-control" value="@ViewBag.SearchName" placeholder="Nhập tên khách hàng...">
        </div>
        <div class="col-md-4">
            <label class="form-label">Tìm kiếm theo email</label>
            <input type="text" name="searchEmail" class="form-control" value="@ViewBag.SearchEmail" placeholder="Nhập email...">
        </div>
        <div class="col-md-4 d-flex align-items-end">
            <button type="submit" class="btn btn-primary me-2">
                <i class="fa fa-search me-1"></i> Tìm kiếm
            </button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fa fa-refresh me-1"></i> Làm mới
            </a>
        </div>
    </form>
</div>

<div class="panel">
    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Năm sinh</th>
                    <th>Thành viên</th>
                    <th>Ngày tạo</th>
                    <th class="text-end">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">Không tìm thấy khách hàng nào.</td>
                    </tr>
                }
                else
                {
                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td>@customer.CustomerId</td>
                            <td>@(customer.Name ?? "-")</td>
                            <td>@customer.Email</td>
                            <td>@(customer.Phone ?? "-")</td>
                            <td>@(customer.BirthYear?.ToString() ?? "-")</td>
                            <td>
                                @if (customer.Membership != null)
                                {
                                    <span class="badge bg-info">@customer.Membership.Name</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@(customer.CreatedDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <a asp-area="Admin" asp-controller="Profile" asp-action="Details" asp-route-id="@customer.CustomerId" 
                                       class="btn btn-sm btn-info" title="Xem chi tiết">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <form asp-area="Admin" asp-controller="Profile" asp-action="Delete" asp-route-id="@customer.CustomerId" 
                                          method="post" class="d-inline" 
                                          onsubmit="return confirm('Bạn có chắc chắn muốn xóa khách hàng này?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger" title="Xóa">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3">
    <small class="text-muted">Tổng số khách hàng: @Model.Count()</small>
</div>

