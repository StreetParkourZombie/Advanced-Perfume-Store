@model PerfumeStore.Models.WarrantyClaim
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Chi tiết yêu cầu bảo hành";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div class="d-flex align-items-center">
        <a asp-action="Claims" class="btn btn-outline-secondary me-3">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h4 class="mb-0">
            <i class="fas fa-clipboard-check me-2 text-info"></i>Chi tiết yêu cầu bảo hành
        </h4>
    </div>
    <div class="d-flex gap-2">
        @if (Model.Status == "Pending" || Model.Status == "Processing")
        {
            <button type="button" class="btn btn-primary" 
                    onclick="processClaim(@Model.WarrantyClaimId, '@Model.ClaimCode')">
                <i class="fas fa-cogs me-1"></i>Xử lý yêu cầu
            </button>
        }
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row g-4">
    <!-- Claim Information -->
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0">
                <h6 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2 text-primary"></i>Thông tin yêu cầu
                </h6>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-muted">Mã yêu cầu</label>
                        <div class="fw-bold fs-5 text-primary">@Model.ClaimCode</div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-muted">Trạng thái</label>
                        <div>
                            <span class="badge bg-@(Model.Status == "Pending" ? "warning" : Model.Status == "Processing" ? "primary" : Model.Status == "Completed" ? "success" : "danger") fs-6 px-3 py-2">
                                @(Model.Status == "Pending" ? "Chờ xử lý" : 
                                  Model.Status == "Processing" ? "Đang xử lý" : 
                                  Model.Status == "Completed" ? "Hoàn thành" : 
                                  Model.Status == "Rejected" ? "Từ chối" : Model.Status)
                            </span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-muted">Loại vấn đề</label>
                        <div>
                            <span class="badge bg-@(Model.IssueType == "Sản phẩm hỏng" ? "danger" : Model.IssueType == "Lỗi chất lượng" ? "warning" : "info") rounded-pill">
                                @Model.IssueType
                            </span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold text-muted">Ngày gửi yêu cầu</label>
                        <div class="fw-semibold">@Model.SubmittedDate.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                    <div class="col-12">
                        <label class="form-label fw-semibold text-muted">Mô tả vấn đề</label>
                        <div class="bg-light rounded-3 p-3">
                            @Model.IssueDescription
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Resolution) || !string.IsNullOrEmpty(Model.AdminNotes))
        {
            <!-- Resolution Information -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-white border-0">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-tools me-2 text-success"></i>Thông tin xử lý
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        @if (!string.IsNullOrEmpty(Model.ResolutionType))
                        {
                            <div class="col-md-6">
                                <label class="form-label fw-semibold text-muted">Loại giải quyết</label>
                                <div>
                                    <span class="badge bg-info rounded-pill">@Model.ResolutionType</span>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.ProcessedByAdmin))
                        {
                            <div class="col-md-6">
                                <label class="form-label fw-semibold text-muted">Xử lý bởi</label>
                                <div class="fw-semibold">@Model.ProcessedByAdmin</div>
                            </div>
                        }
                        @if (Model.ProcessedDate.HasValue)
                        {
                            <div class="col-md-6">
                                <label class="form-label fw-semibold text-muted">Ngày xử lý</label>
                                <div class="fw-semibold">@Model.ProcessedDate.Value.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                        }
                        @if (Model.CompletedDate.HasValue)
                        {
                            <div class="col-md-6">
                                <label class="form-label fw-semibold text-muted">Ngày hoàn thành</label>
                                <div class="fw-semibold">@Model.CompletedDate.Value.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Resolution))
                        {
                            <div class="col-12">
                                <label class="form-label fw-semibold text-muted">Giải pháp</label>
                                <div class="bg-success bg-opacity-10 border border-success border-opacity-25 rounded-3 p-3">
                                    <i class="fas fa-check-circle text-success me-2"></i>@Model.Resolution
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.AdminNotes))
                        {
                            <div class="col-12">
                                <label class="form-label fw-semibold text-muted">Ghi chú admin</label>
                                <div class="bg-light rounded-3 p-3">
                                    <i class="fas fa-sticky-note text-warning me-2"></i>@Model.AdminNotes
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Warranty Information -->
    <div class="col-lg-4">
        @if (Model.Warranty != null)
        {
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-shield-heart me-2 text-primary"></i>Thông tin bảo hành
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="bg-primary bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center mb-2" style="width: 60px; height: 60px;">
                            <i class="fas fa-shield-heart text-white fa-lg"></i>
                        </div>
                        <h6 class="fw-bold">@Model.Warranty.WarrantyCode</h6>
                    </div>
                    
                    <div class="mb-3">
                        <small class="text-muted">Thời gian bảo hành</small>
                        <div class="fw-semibold">@Model.Warranty.WarrantyPeriodMonths tháng</div>
                    </div>
                    
                    <div class="mb-3">
                        <small class="text-muted">Ngày bắt đầu</small>
                        <div class="fw-semibold">@Model.Warranty.StartDate.ToString("dd/MM/yyyy")</div>
                    </div>
                    
                    <div class="mb-3">
                        <small class="text-muted">Ngày kết thúc</small>
                        <div class="fw-semibold">@Model.Warranty.EndDate.ToString("dd/MM/yyyy")</div>
                    </div>
                    
                    <div class="mb-3">
                        <small class="text-muted">Trạng thái bảo hành</small>
                        <div>
                            <span class="badge bg-@(Model.Warranty.Status == "Active" ? "success" : "secondary")">
                                @Model.Warranty.Status
                            </span>
                        </div>
                    </div>
                    
                    <div class="d-grid">
                        <a asp-action="Details" asp-route-id="@Model.Warranty.WarrantyId" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-eye me-1"></i>Xem chi tiết bảo hành
                        </a>
                    </div>
                </div>
            </div>
        }

        <!-- Timeline -->
        <div class="card border-0 shadow-sm mt-4">
            <div class="card-header bg-white border-0">
                <h6 class="card-title mb-0">
                    <i class="fas fa-history me-2 text-secondary"></i>Lịch sử xử lý
                </h6>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="timeline-item">
                        <div class="timeline-marker bg-info"></div>
                        <div class="timeline-content">
                            <div class="fw-semibold">Yêu cầu được gửi</div>
                            <small class="text-muted">@Model.SubmittedDate.ToString("dd/MM/yyyy HH:mm")</small>
                        </div>
                    </div>
                    
                    @if (Model.ProcessedDate.HasValue)
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <div class="fw-semibold">Bắt đầu xử lý</div>
                                <small class="text-muted">@Model.ProcessedDate.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                @if (!string.IsNullOrEmpty(Model.ProcessedByAdmin))
                                {
                                    <div><small class="text-muted">Bởi: @Model.ProcessedByAdmin</small></div>
                                }
                            </div>
                        </div>
                    }
                    
                    @if (Model.CompletedDate.HasValue)
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-@(Model.Status == "Completed" ? "success" : "danger")"></div>
                            <div class="timeline-content">
                                <div class="fw-semibold">
                                    @(Model.Status == "Completed" ? "Hoàn thành" : "Từ chối")
                                </div>
                                <small class="text-muted">@Model.CompletedDate.Value.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Process Claim Modal (same as Claims.cshtml) -->
<div class="modal fade" id="processClaimModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title">
                    <i class="fas fa-cogs text-primary me-2"></i>Xử lý yêu cầu bảo hành
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="processClaimForm" method="post">
                <div class="modal-body">
                    <input type="hidden" id="claimId" name="id" />
                    
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Mã yêu cầu</label>
                        <input type="text" id="claimCode" class="form-control" readonly />
                    </div>
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Trạng thái mới</label>
                            <select name="status" class="form-select" required>
                                <option value="">Chọn trạng thái</option>
                                <option value="Processing">Đang xử lý</option>
                                <option value="Completed">Hoàn thành</option>
                                <option value="Rejected">Từ chối</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Loại giải quyết</label>
                            <select name="resolutionType" class="form-select">
                                <option value="">Chọn loại</option>
                                <option value="Thay thế">Thay thế sản phẩm</option>
                                <option value="Sửa chữa">Sửa chữa</option>
                                <option value="Hoàn tiền">Hoàn tiền</option>
                                <option value="Từ chối">Từ chối yêu cầu</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Giải pháp</label>
                        <textarea name="resolution" class="form-control" rows="3" 
                                  placeholder="Mô tả cách giải quyết vấn đề..."></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Ghi chú admin</label>
                        <textarea name="adminNotes" class="form-control" rows="2" 
                                  placeholder="Ghi chú nội bộ..."></textarea>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Cập nhật
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function processClaim(claimId, claimCode) {
    document.getElementById('claimId').value = claimId;
    document.getElementById('claimCode').value = claimCode;
    document.getElementById('processClaimForm').action = '@Url.Action("ProcessClaim")/' + claimId;
    
    new bootstrap.Modal(document.getElementById('processClaimModal')).show();
}
</script>

<style>
.timeline {
    position: relative;
    padding-left: 30px;
}

.timeline-item {
    position: relative;
    padding-bottom: 20px;
}

.timeline-marker {
    position: absolute;
    left: -35px;
    top: 5px;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 3px solid #fff;
    box-shadow: 0 0 0 2px #dee2e6;
}

.timeline-item:not(:last-child)::before {
    content: '';
    position: absolute;
    left: -30px;
    top: 17px;
    width: 2px;
    height: calc(100% - 12px);
    background-color: #dee2e6;
}

.card {
    border-radius: 12px;
}

.card-header {
    border-radius: 12px 12px 0 0 !important;
}
</style>