@model IEnumerable<PerfumeStore.Models.WarrantyClaim>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Yêu cầu bảo hành";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div class="d-flex align-items-center">
        <a asp-action="Index" class="btn btn-outline-secondary me-3">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h4 class="mb-0">
            <i class="fas fa-exclamation-triangle me-2 text-warning"></i>Yêu cầu bảo hành
        </h4>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-outline-success" onclick="exportClaims()">
            <i class="fas fa-file-excel me-1"></i>Xuất Excel
        </button>
        <button class="btn btn-outline-primary" onclick="refreshClaims()">
            <i class="fas fa-sync-alt me-1"></i>Làm mới
        </button>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Statistics Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-info bg-gradient rounded-3 p-3">
                            <i class="fas fa-clipboard-list text-white fa-lg"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Tổng yêu cầu</div>
                        <div class="fs-4 fw-bold text-info">@(ViewBag.TotalClaims ?? Model.Count())</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-gradient rounded-3 p-3">
                            <i class="fas fa-clock text-white fa-lg"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Chờ xử lý</div>
                        <div class="fs-4 fw-bold text-warning">@(ViewBag.PendingClaims ?? Model.Count(c => c.Status == "Pending"))</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-gradient rounded-3 p-3">
                            <i class="fas fa-cogs text-white fa-lg"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Đang xử lý</div>
                        <div class="fs-4 fw-bold text-primary">@(ViewBag.ProcessingClaims ?? Model.Count(c => c.Status == "Processing"))</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-gradient rounded-3 p-3">
                            <i class="fas fa-check-circle text-white fa-lg"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Hoàn thành</div>
                        <div class="fs-4 fw-bold text-success">@(ViewBag.CompletedClaims ?? Model.Count(c => c.Status == "Completed"))</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filter Section -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white border-0">
        <h6 class="card-title mb-0">
            <i class="fas fa-filter me-2 text-info"></i>Bộ lọc yêu cầu bảo hành
        </h6>
    </div>
    <div class="card-body">
        <form method="get" asp-action="Claims" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Trạng thái</label>
                <select name="status" class="form-select">
                    <option value="">Tất cả trạng thái</option>
                    <option value="Pending" selected="@(ViewBag.CurrentStatus == "Pending")">Chờ xử lý</option>
                    <option value="Processing" selected="@(ViewBag.CurrentStatus == "Processing")">Đang xử lý</option>
                    <option value="Completed" selected="@(ViewBag.CurrentStatus == "Completed")">Hoàn thành</option>
                    <option value="Rejected" selected="@(ViewBag.CurrentStatus == "Rejected")">Từ chối</option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Tìm kiếm</label>
                <input type="text" name="search" class="form-control" 
                       placeholder="Mã yêu cầu, mô tả vấn đề..." 
                       value="@ViewBag.CurrentSearch" />
            </div>
            <div class="col-md-5">
                <label class="form-label">&nbsp;</label>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search me-1"></i>Lọc
                    </button>
                    <a href="@Url.Action("Claims")" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-1"></i>Xóa bộ lọc
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Claims Table -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-0">
        <h6 class="card-title mb-0">
            <i class="fas fa-list me-2 text-secondary"></i>Danh sách yêu cầu bảo hành
        </h6>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="border-0 ps-4">Mã yêu cầu</th>
                            <th class="border-0">Mã bảo hành</th>
                            <th class="border-0">Vấn đề</th>
                            <th class="border-0 text-center">Loại</th>
                            <th class="border-0 text-center">Trạng thái</th>
                            <th class="border-0 text-center">Ngày gửi</th>
                            <th class="border-0 text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-semibold">@claim.ClaimCode</div>
                                    <small class="text-muted">ID: @claim.WarrantyClaimId</small>
                                </td>
                                <td>
                                    @if (claim.Warranty != null)
                                    {
                                        <span class="fw-semibold text-primary">@claim.Warranty.WarrantyCode</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    <div class="fw-semibold">@claim.IssueDescription</div>
                                    @if (!string.IsNullOrEmpty(claim.Resolution))
                                    {
                                        <small class="text-success">
                                            <i class="fas fa-check me-1"></i>@claim.Resolution
                                        </small>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-@(claim.IssueType == "Sản phẩm hỏng" ? "danger" : claim.IssueType == "Lỗi chất lượng" ? "warning" : "info") rounded-pill">
                                        @claim.IssueType
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-@(claim.Status == "Pending" ? "warning" : claim.Status == "Processing" ? "primary" : claim.Status == "Completed" ? "success" : "danger") rounded-pill">
                                        @(claim.Status == "Pending" ? "Chờ xử lý" : 
                                          claim.Status == "Processing" ? "Đang xử lý" : 
                                          claim.Status == "Completed" ? "Hoàn thành" : 
                                          claim.Status == "Rejected" ? "Từ chối" : claim.Status)
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="fw-semibold">@claim.SubmittedDate.ToString("dd/MM/yyyy")</div>
                                    <small class="text-muted">@claim.SubmittedDate.ToString("HH:mm")</small>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="ClaimDetails" asp-route-id="@claim.WarrantyClaimId" 
                                           class="btn btn-outline-info" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (claim.Status == "Pending" || claim.Status == "Processing")
                                        {
                                            <button type="button" class="btn btn-outline-primary" 
                                                    onclick="processClaim(@claim.WarrantyClaimId, '@claim.ClaimCode')"
                                                    title="Xử lý">
                                                <i class="fas fa-cogs"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="text-muted">
                    <i class="fas fa-clipboard-list fa-3x mb-3 d-block"></i>
                    <h6>Chưa có yêu cầu bảo hành nào</h6>
                    <p class="mb-3">Hiện tại chưa có khách hàng nào gửi yêu cầu bảo hành.</p>
                </div>
            </div>
        }
    </div>
</div>

<!-- Process Claim Modal -->
<div class="modal fade" id="processClaimModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title">
                    <i class="fas fa-cogs text-primary me-2"></i>Xử lý yêu cầu bảo hành
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="processClaimForm" method="post">
                <div class="modal-body">
                    <input type="hidden" id="claimId" name="id" />
                    
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Mã yêu cầu</label>
                        <input type="text" id="claimCode" class="form-control" readonly />
                    </div>
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Trạng thái mới</label>
                            <select name="status" class="form-select" required>
                                <option value="">Chọn trạng thái</option>
                                <option value="Processing">Đang xử lý</option>
                                <option value="Completed">Hoàn thành</option>
                                <option value="Rejected">Từ chối</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Loại giải quyết</label>
                            <select name="resolutionType" class="form-select">
                                <option value="">Chọn loại</option>
                                <option value="Thay thế">Thay thế sản phẩm</option>
                                <option value="Sửa chữa">Sửa chữa</option>
                                <option value="Hoàn tiền">Hoàn tiền</option>
                                <option value="Từ chối">Từ chối yêu cầu</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Giải pháp</label>
                        <textarea name="resolution" class="form-control" rows="3" 
                                  placeholder="Mô tả cách giải quyết vấn đề..."></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Ghi chú admin</label>
                        <textarea name="adminNotes" class="form-control" rows="2" 
                                  placeholder="Ghi chú nội bộ..."></textarea>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Cập nhật
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
// Process claim function
function processClaim(claimId, claimCode) {
    document.getElementById('claimId').value = claimId;
    document.getElementById('claimCode').value = claimCode;
    document.getElementById('processClaimForm').action = '@Url.Action("ProcessClaim")/' + claimId;
    
    new bootstrap.Modal(document.getElementById('processClaimModal')).show();
}

// Export and refresh functions
function exportClaims() {
    alert('Chức năng xuất Excel sẽ được triển khai sau.');
}

function refreshClaims() {
    location.reload();
}

// Auto-hide alerts
setTimeout(function() {
    const alerts = document.querySelectorAll('.alert');
    alerts.forEach(alert => {
        if (alert.classList.contains('show')) {
            bootstrap.Alert.getOrCreateInstance(alert).close();
        }
    });
}, 5000);
</script>

<style>
.card {
    border-radius: 12px;
}

.card-header {
    border-radius: 12px 12px 0 0 !important;
}

.table th {
    font-weight: 600;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.btn-group-sm > .btn {
    padding: 0.25rem 0.5rem;
}

.badge {
    font-size: 0.75rem;
}

.modal-content {
    border-radius: 12px;
    border: none;
    box-shadow: 0 10px 40px rgba(0,0,0,0.1);
}

@@media (max-width: 768px) {
    .btn-group-sm {
        flex-direction: column;
    }
    
    .btn-group-sm > .btn {
        border-radius: 0.375rem !important;
        margin-bottom: 2px;
    }
}
</style>