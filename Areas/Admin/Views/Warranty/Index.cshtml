@model PerfumeStore.Areas.Admin.Models.PagedResult<PerfumeStore.Areas.Admin.Models.Warranty>
@{
    ViewData["Title"] = "Quản lý bảo hành";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h4 class="mb-0">
        <i class="fas fa-shield-heart me-2 text-primary"></i>Quản lý bảo hành
    </h4>
    <div class="d-flex gap-2">
        <a asp-action="Claims" class="btn btn-outline-warning">
            <i class="fas fa-exclamation-triangle me-1"></i>Yêu cầu bảo hành
        </a>
        <button class="btn btn-outline-success" onclick="exportWarranties()">
            <i class="fas fa-file-excel me-1"></i>Xuất Excel
        </button>
        <div class="alert alert-info d-inline-flex align-items-center ms-3 mb-0 py-2 px-3">
            <i class="fas fa-info-circle me-2"></i>
            <small>Bảo hành được tạo tự động khi khách hàng mua sản phẩm</small>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (ViewBag.TestMessage != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <i class="fas fa-info-circle me-2"></i>@ViewBag.TestMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Statistics Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-gradient rounded-3 p-3">
                            <i class="fas fa-shield-alt text-white fa-lg"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Tổng bảo hành</div>
                        <div class="fs-4 fw-bold text-primary">@ViewBag.TotalWarranties</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-gradient rounded-3 p-3">
                            <i class="fas fa-check-circle text-white fa-lg"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Đang hoạt động</div>
                        <div class="fs-4 fw-bold text-success">@ViewBag.ActiveWarranties</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-gradient rounded-3 p-3">
                            <i class="fas fa-clock text-white fa-lg"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Đã hết hạn</div>
                        <div class="fs-4 fw-bold text-warning">@ViewBag.ExpiredWarranties</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-danger bg-gradient rounded-3 p-3">
                            <i class="fas fa-exclamation-triangle text-white fa-lg"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="text-muted small">Có yêu cầu</div>
                        <div class="fs-4 fw-bold text-danger">@ViewBag.ClaimedWarranties</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filter Section -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white border-0">
        <h6 class="card-title mb-0">
            <i class="fas fa-filter me-2 text-info"></i>Bộ lọc
        </h6>
    </div>
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Trạng thái</label>
                <select name="status" class="form-select">
                    <option value="">Tất cả trạng thái</option>
                    <option value="Active" selected="@(ViewBag.CurrentStatus == "Active")">Đang hoạt động</option>
                    <option value="Expired" selected="@(ViewBag.CurrentStatus == "Expired")">Đã hết hạn</option>
                    <option value="Cancelled" selected="@(ViewBag.CurrentStatus == "Cancelled")">Đã hủy</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Tìm kiếm</label>
                <input type="text" name="search" class="form-control" placeholder="Mã bảo hành, ghi chú..." value="@ViewBag.CurrentSearch" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Từ ngày</label>
                <input type="date" name="fromDate" class="form-control" value="@ViewBag.CurrentFromDate" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Đến ngày</label>
                <input type="date" name="toDate" class="form-control" value="@ViewBag.CurrentToDate" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <div class="d-flex gap-2 w-100">
                    <button type="submit" class="btn btn-primary flex-fill">
                        <i class="fas fa-search me-1"></i>Lọc
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Warranties Table -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-0 pb-0">
        <div class="row align-items-center">
            <div class="col">
                <h6 class="card-title mb-0">
                    <i class="fas fa-table me-2 text-secondary"></i>Danh sách bảo hành
                </h6>
            </div>
            <div class="col-auto">
                <div class="input-group input-group-sm" style="width: 250px;">
                    <span class="input-group-text bg-light border-end-0">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    <input type="text" class="form-control border-start-0" placeholder="Tìm kiếm nhanh..." id="quickSearch">
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" id="warrantiesTable">
                <thead class="table-light">
                    <tr>
                        <th class="border-0 ps-4">Mã bảo hành</th>
                        <th class="border-0">Thời hạn</th>
                        <th class="border-0 text-center">Trạng thái</th>
                        <th class="border-0 text-center">Yêu cầu</th>
                        <th class="border-0 text-center">Ngày tạo</th>
                        <th class="border-0 text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model?.Items?.Any() ?? false)
                    {
                        @foreach (var warranty in Model.Items)
                        {
                            var daysLeft = (warranty.EndDate - DateTime.Now).Days;
                            var statusClass = warranty.Status switch
                            {
                                "Active" => daysLeft > 30 ? "success" : daysLeft > 0 ? "warning" : "danger",
                                "Expired" => "secondary",
                                "Cancelled" => "dark",
                                _ => "secondary"
                            };
                            var statusText = warranty.Status switch
                            {
                                "Active" => daysLeft > 0 ? $"Còn {daysLeft} ngày" : "Hết hạn",
                                "Expired" => "Đã hết hạn",
                                "Cancelled" => "Đã hủy",
                                _ => "Hoạt động" // Mặc định hiển thị "Hoạt động"
                            };

                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-gradient rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                            <i class="fas fa-shield-alt text-white"></i>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@warranty.WarrantyCode</div>
                                            <small class="text-muted">ID: @warranty.WarrantyId</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="small">
                                        <div><strong>Từ:</strong> @warranty.StartDate.ToString("dd/MM/yyyy")</div>
                                        <div><strong>Đến:</strong> @warranty.EndDate.ToString("dd/MM/yyyy")</div>
                                        <small class="text-muted">(@warranty.WarrantyPeriodMonths tháng)</small>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-@statusClass rounded-pill">
                                        @statusText
                                    </span>
                                </td>
                                <td class="text-center">
                                    @if (warranty.WarrantyClaims.Any())
                                    {
                                        <span class="badge bg-warning rounded-pill">
                                            @warranty.WarrantyClaims.Count yêu cầu
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không có</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <small class="text-muted">@warranty.CreatedDate.ToString("dd/MM/yyyy HH:mm")</small>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@warranty.WarrantyId" 
                                           class="btn btn-outline-info" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@warranty.WarrantyId" 
                                           class="btn btn-outline-primary" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@warranty.WarrantyId" 
                                           class="btn btn-outline-danger" title="Xóa"
                                           onclick="return confirm('Bạn có chắc chắn muốn xóa bảo hành này?');">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" title="Cập nhật trạng thái">
                                                <i class="fas fa-cog"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" href="#" onclick="updateStatus(@warranty.WarrantyId, 'Active')">
                                                    <i class="fas fa-check-circle text-success me-2"></i>Kích hoạt
                                                </a></li>
                                                <li><a class="dropdown-item" href="#" onclick="updateStatus(@warranty.WarrantyId, 'Expired')">
                                                    <i class="fas fa-clock text-warning me-2"></i>Hết hạn
                                                </a></li>
                                                <li><a class="dropdown-item" href="#" onclick="updateStatus(@warranty.WarrantyId, 'Cancelled')">
                                                    <i class="fas fa-times-circle text-danger me-2"></i>Hủy
                                                </a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <div class="text-muted">
                                    <i class="fas fa-shield-alt fa-3x mb-3 d-block"></i>
                                    <h6>Chưa có bảo hành nào</h6>
                                    <p class="mb-3">Hãy tạo bảo hành đầu tiên cho khách hàng.</p>
                                    <a asp-action="Create" class="btn btn-primary">
                                        <i class="fas fa-plus me-1"></i>Tạo bảo hành đầu tiên
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Areas/Admin/Views/Shared/_Pagination.cshtml", Model)

<!-- Update Status Form (Hidden) -->
<form id="updateStatusForm" method="post" asp-action="UpdateStatus" style="display: none;">
    @Html.AntiForgeryToken()
    <input type="hidden" id="warrantyId" name="id" />
    <input type="hidden" id="newStatus" name="status" />
</form>

<script>
// Quick search functionality
document.getElementById('quickSearch').addEventListener('keyup', function() {
    const searchTerm = this.value.toLowerCase();
    const tableRows = document.querySelectorAll('#warrantiesTable tbody tr');
    
    tableRows.forEach(row => {
        const text = row.textContent.toLowerCase();
        if (text.includes(searchTerm)) {
            row.style.display = '';
        } else {
            row.style.display = 'none';
        }
    });
});

// Update warranty status
function updateStatus(warrantyId, status) {
    if (confirm(`Bạn có chắc chắn muốn cập nhật trạng thái thành '${status}'?`)) {
        document.getElementById('warrantyId').value = warrantyId;
        document.getElementById('newStatus').value = status;
        document.getElementById('updateStatusForm').submit();
    }
}

// Export functionality
function exportWarranties() {
    alert('Chức năng xuất Excel sẽ được triển khai sau.');
}

// Auto-hide alerts
setTimeout(function() {
    const alerts = document.querySelectorAll('.alert');
    alerts.forEach(alert => {
        if (alert.classList.contains('show')) {
            bootstrap.Alert.getOrCreateInstance(alert).close();
        }
    });
}, 5000);
</script>

<style>
.card {
    border-radius: 12px;
}

.card-header {
    border-radius: 12px 12px 0 0 !important;
}

.table th {
    font-weight: 600;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.btn-group-sm > .btn {
    padding: 0.25rem 0.5rem;
}

.badge {
    font-size: 0.75rem;
}

@@media (max-width: 768px) {
    .btn-group-sm {
        flex-direction: column;
    }
    
    .btn-group-sm > .btn {
        border-radius: 0.375rem !important;
        margin-bottom: 2px;
    }
}
</style>