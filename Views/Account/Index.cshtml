@model PerfumeStore.Models.ViewModels.CustomerAccountVM
@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="account-page container py-4">
    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h5 class="mb-3">Cập nhật thông tin</h5>

                    @await Html.PartialAsync("_Alert")

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                    <form asp-action="Index" asp-controller="Account" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Nguyễn Văn A" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" readonly="readonly" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control" inputmode="numeric" pattern="^\d{10,11}$" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="BirthYear" class="form-label"></label>
                            <input asp-for="BirthYear" class="form-control" placeholder="Nhập năm sinh (tuỳ chọn)" min="1900" max="@DateTime.Now.Year" />
                            <span asp-validation-for="BirthYear" class="text-danger small"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-save me-2"></i> Cập nhật thông tin
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body p-4">
                    <h6 class="mb-3">Thông tin tài khoản</h6>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Trạng thái</span>
                        <span class="badge bg-success-subtle text-success">Hoạt động</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>ID Khách hàng</span>
                        <span class="text-muted">#@Model.CustomerId</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Hạng thành viên</span>
                        <span class="@(string.IsNullOrWhiteSpace(Model.MembershipName) ? "text-muted" : "badge bg-primary-subtle text-primary")">
                            @(string.IsNullOrWhiteSpace(Model.MembershipName) ? "Chưa có" : Model.MembershipName)
                        </span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span>Ngày tham gia</span>
                        <span class="text-muted">
                            @(Model.CreatedDate.HasValue ? Model.CreatedDate.Value.ToString("dd/MM/yyyy") : "Chưa cập nhật")
                        </span>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="list-group list-group-flush quick-actions">
                    <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" asp-controller="Account" asp-action="MyOrders">
                        <span><i class="bi bi-bag-check me-2"></i>Đơn hàng của tôi</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" href="#">
                        <span><i class="bi bi-cart3 me-2"></i>Giỏ hàng</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" href="#">
                        <span><i class="bi bi-bag-plus me-2"></i>Mua sắm</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="list-group list-group-flush">
                    <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" href="#">
                        <span><i class="bi bi-key me-2"></i>Đổi mật khẩu</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    <a class="list-group-item list-group-item-action text-danger d-flex justify-content-between align-items-center" href="#">
                        <span><i class="bi bi-box-arrow-right me-2"></i>Đăng xuất</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


