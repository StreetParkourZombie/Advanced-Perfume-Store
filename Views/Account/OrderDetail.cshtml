@model PerfumeStore.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/OrderDetail.css" />

<div class="order-detail-page">
<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="order-detail-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-1">
                            <i class="fas fa-receipt me-2"></i> Chi tiết đơn hàng #@Model.OrderId
                        </h3>
                        <p class="mb-0 opacity-75">Xem thông tin chi tiết về đơn hàng của bạn</p>
                    </div>
                    <a asp-controller="Account" asp-action="MyOrders" class="btn btn-light">
                        <i class="fas fa-arrow-left me-2"></i> Quay lại
                    </a>
                </div>
            </div>

            @if (ViewBag.AlertMessage != null)
            {
                <div class="alert alert-@(ViewBag.AlertType ?? "info") alert-dismissible fade show" role="alert">
                    @ViewBag.AlertMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Thanh tiến trình trạng thái đơn hàng -->
            @{
                var status = Model?.Status ?? "Đã đặt hàng";
                var steps = new List<string> { "Đã đặt hàng", "Chờ xác nhận", "Chờ lấy hàng", "Đang giao", "Đã giao" };
                var statusIndex = steps.FindIndex(s => status.Contains(s));
                if (statusIndex == -1) statusIndex = 0;
            }

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="order-progress">
                        @for (int i = 0; i < steps.Count; i++)
                        {
                            var isActive = i <= statusIndex;
                            <div class="step @(isActive ? "active" : "")">
                                <div class="icon">
                                    @if (steps[i] == "Đã đặt hàng") { <i class="fas fa-shopping-bag"></i> }
                                    else if (steps[i] == "Chờ xác nhận") { <i class="fas fa-clock"></i> }
                                    else if (steps[i] == "Chờ lấy hàng") { <i class="fas fa-box"></i> }
                                    else if (steps[i] == "Đang giao") { <i class="fas fa-truck"></i> }
                                    else if (steps[i] == "Đã giao") { <i class="fas fa-check-circle"></i> }
                                </div>
                                <p>@steps[i]</p>
                            </div>
                        }
                    </div>
                    <div class="text-center mt-4">
                        @{
                            var statusBadgeClass = status switch
                            {
                                "Đã giao" or "Đã giao hàng" => "status-delivered",
                                "Đang giao hàng" or "Đang giao" => "status-shipping",
                                "Đã hủy" or "Hủy" => "status-cancelled",
                                "Chờ xác nhận" => "status-pending",
                                "Chờ lấy hàng" => "status-processing",
                                _ => "status-pending"
                            };
                            
                            // Kiểm tra xem có thể hủy đơn hàng không
                            var canCancelStatuses = new[] { "Đã đặt hàng", "Chờ xác nhận", "Chờ lấy hàng" };
                            var canCancel = canCancelStatuses.Any(s => status.Contains(s));
                        }
                        <span class="status-badge-large @statusBadgeClass">
                            <i class="fas fa-info-circle me-2"></i>Trạng thái: @status
                        </span>
                        
                        @if (canCancel)
                        {
                            <div class="mt-3">
                                <form asp-action="CancelOrder" asp-controller="Account" method="post" onsubmit="return confirm('Bạn có chắc chắn muốn hủy đơn hàng này? Hành động này không thể hoàn tác.');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@Model.OrderId" />
                                    <button type="submit" class="btn btn-danger btn-lg">
                                        <i class="fas fa-times-circle me-2"></i>Hủy đơn hàng
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <!-- Thông tin sản phẩm -->
                    <div class="product-table-card card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-box me-2"></i> Sản phẩm đã đặt</h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table product-table mb-0">
                                    <thead>
                                        <tr>
                                            <th>Sản phẩm</th>
                                            <th class="text-center">Số lượng</th>
                                            <th class="text-end">Đơn giá</th>
                                            <th class="text-end">Thành tiền</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var d in Model.OrderDetails ?? new List<OrderDetail>())
                                        {
                                            <tr>
                                                <td>
                                                    <div class="product-info-cell">
                                                        @if (d.Product?.ProductImages?.FirstOrDefault() != null)
                                                        {
                                                            var image = d.Product.ProductImages.FirstOrDefault();
                                                            string imageUrl = "/images/placeholder.jpg";
                                                            if (image?.ImageData != null && !string.IsNullOrWhiteSpace(image.ImageMimeType))
                                                            {
                                                                imageUrl = $"data:{image.ImageMimeType};base64,{Convert.ToBase64String(image.ImageData)}";
                                                            }
                                                            <img src="@imageUrl" alt="@d.Product.ProductName" class="product-image" />
                                                        }
                                                        else
                                                        {
                                                            <div class="product-image-placeholder">
                                                                <i class="fas fa-image"></i>
                                                            </div>
                                                        }
                                                        <div>
                                                            <div class="product-name">@(d.Product?.ProductName ?? "Sản phẩm không xác định")</div>
                                                            <div class="product-description">Nước hoa cao cấp</div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="text-center">@(d.Quantity ?? 0)</td>
                                                <td class="text-end">@d.UnitPrice.ToString("N0") ₫</td>
                                                <td class="text-end"><strong>@d.TotalPrice.ToString("N0") ₫</strong></td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th colspan="3" class="text-end">Tổng tiền:</th>
                                            <th class="text-end" style="color: #28a745; font-size: 1.25rem;">@(Model.TotalAmount?.ToString("N0") ?? "0") ₫</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <!-- Thông tin đơn hàng -->
                    <div class="info-card card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i> Thông tin đơn hàng</h5>
                        </div>
                        <div class="card-body">
                            <div class="info-item">
                                <span class="info-label">Mã đơn hàng</span>
                                <span class="info-value highlight">#@Model.OrderId</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Ngày đặt</span>
                                <span class="info-value">@(Model.OrderDate?.ToString("dd/MM/yyyy HH:mm") ?? "-")</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Phương thức thanh toán</span>
                                <span class="info-value">@(Model.PaymentMethod ?? "Chưa cập nhật")</span>
                            </div>
                            @if (!string.IsNullOrWhiteSpace(Model.Notes))
                            {
                                <div class="info-item">
                                    <span class="info-label">Ghi chú</span>
                                    <span class="info-value">@Model.Notes</span>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Địa chỉ giao hàng -->
                    @if (Model.Address != null)
                    {
                        <div class="info-card address-card card">
                            <div class="card-header">
                                <h5 class="mb-0"><i class="fas fa-map-marker-alt me-2"></i> Địa chỉ giao hàng</h5>
                            </div>
                            <div class="card-body">
                                <div class="address-name">
                                    <i class="fas fa-user me-2"></i>@(Model.Address.RecipientName ?? "")
                                </div>
                                <div class="address-phone">
                                    <i class="fas fa-phone me-2"></i>@(Model.Address.Phone ?? "")
                                </div>
                                <div class="address-line">
                                    <i class="fas fa-home me-2"></i>
                                    @(Model.Address.AddressLine ?? ""), 
                                    @(Model.Address.Ward ?? ""), 
                                    @(Model.Address.District ?? ""), 
                                    @(Model.Address.Province ?? "")
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<style>
    .btn-danger.btn-lg {
        padding: 0.75rem 2rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(220, 53, 69, 0.2);
    }
    
    .btn-danger.btn-lg:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
    }
</style>
