@model PerfumeStore.Models.ViewModels.CustomerVoucherVM
@{
    ViewData["Title"] = "Voucher của tôi";
}

<div class="container py-5 voucher-page">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
        <div>
            <h2 class="fw-semibold mb-1">Voucher của tôi</h2>
            <p class="text-muted mb-0">Xem và quản lý các mã giảm giá được cấp riêng cho bạn.</p>
        </div>
        <div class="mt-3 mt-md-0">
            <a asp-controller="Account" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại tài khoản
            </a>
        </div>
    </div>

    @await Html.PartialAsync("_Alert")

    <div class="row g-4">
        <div class="col-12">
            <div class="card shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0"><i class="bi bi-star-fill text-warning me-2"></i>Voucher dành riêng cho bạn</h5>
                        <span class="badge bg-primary-subtle text-primary fw-semibold">@Model.PersonalCoupons.Count</span>
                    </div>

                        @if (!Model.PersonalCoupons.Any())
                        {
                            <div class="text-center text-muted py-4">
                                <i class="bi bi-ticket-perforated fs-1 mb-2"></i>
                                <p class="mb-1">Bạn chưa có voucher nào được gán riêng.</p>
                                <small>Hãy theo dõi các chương trình của Orchard để nhận thêm ưu đãi.</small>
                            </div>
                        }
                        else
                        {
                            <div class="voucher-list">
                                @foreach (var coupon in Model.PersonalCoupons)
                                {
                                    var isAvailable = !coupon.IsUsed && !coupon.IsExpired;
                                    <div class="voucher-item border rounded-4 p-3 mb-3 @(!isAvailable ? "voucher-disabled" : "")">
                                        <div class="d-flex justify-content-between flex-wrap gap-2">
                                            <div>
                                                <div class="d-flex align-items-center gap-2">
                                                    <span class="badge bg-danger-subtle text-danger text-uppercase small">Mã riêng</span>
                                                    @if (coupon.IsUsed)
                                                    {
                                                        <span class="badge bg-secondary-subtle text-secondary">Đã sử dụng @(coupon.UsedDate?.ToString("dd/MM/yyyy"))</span>
                                                    }
                                                    else if (coupon.IsExpired)
                                                    {
                                                        <span class="badge bg-warning-subtle text-warning">Hết hạn @(coupon.ExpiryDate?.ToString("dd/MM/yyyy"))</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-success-subtle text-success">Có thể dùng</span>
                                                    }
                                                </div>
                                                <h5 class="mt-2 mb-1 text-dark">Giảm @(coupon.DiscountAmount?.ToString("#,##0") ?? "0") </h5>
                                                <div class="text-muted small">
                                                    Hết hạn: @(coupon.ExpiryDate?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")
                                                </div>
                                            </div>
                                            <div class="text-md-end">
                                                <div class="voucher-code-box" data-code="@coupon.Code">
                                                    <span class="text-uppercase fw-bold">@coupon.Code</span>
                                                    <button type="button" class="btn btn-link btn-sm copy-code text-decoration-none" data-code="@coupon.Code">
                                                        <i class="bi bi-clipboard-check me-1"></i>Sao chép
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mt-4">
        <div class="card-body p-4">
            <h6 class="fw-semibold mb-3">Lưu ý sử dụng voucher</h6>
            <ul class="small text-muted ps-3 mb-0">
                <li>Voucher chỉ áp dụng cho đơn hàng thoả điều kiện chương trình.</li>
                <li>Mỗi đơn hàng chỉ dùng được 1 voucher.</li>
                <li>Voucher quá hạn hoặc đã sử dụng sẽ không thể áp dụng.</li>
                <li>Liên hệ PerfumeStore nếu bạn gặp vấn đề khi dùng voucher.</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.copy-code').forEach(btn => {
            btn.addEventListener('click', () => {
                const code = btn.dataset.code;
                if (!code) return;
                navigator.clipboard.writeText(code)
                    .then(() => {
                        const original = btn.innerHTML;
                        btn.innerHTML = '<i class="bi bi-check2-circle me-1"></i>Đã sao chép';
                        btn.disabled = true;
                        setTimeout(() => {
                            btn.innerHTML = original;
                            btn.disabled = false;
                        }, 1500);
                    })
                    .catch(() => alert('Không thể sao chép mã. Vui lòng thử lại.'));
            });
        });
    </script>
}

<style>
    .voucher-page .voucher-item {
        border-style: dashed;
        border-width: 2px;
    }

    .voucher-code-box {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 10px 16px;
        display: inline-flex;
        flex-direction: column;
        align-items: flex-start;
        min-width: 160px;
        border: 1px dashed #dee2e6;
    }

    .voucher-disabled {
        opacity: 0.65;
    }
</style>

