@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="container py-5" style="min-height: 80vh; display:flex; align-items:center;">
    <div class="row justify-content-center w-100">
        <div class="col-12 col-md-8 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <div class="mb-2" style="font-size: 40px; color: #d9534f;"><i class="fa-solid fa-unlock-keyhole"></i></div>
                        <h3 class="fw-semibold mb-1">Quên mật khẩu</h3>
                        <p class="text-muted mb-0">Nhập email để nhận mã OTP đặt lại mật khẩu</p>
                    </div>

                    @if (!string.IsNullOrEmpty(ViewBag.Error as string))
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <form asp-action="SendOtp" method="post" class="mt-3">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light"><i class="fa-regular fa-envelope"></i></span>
                                <input type="email" class="form-control" name="email" placeholder="you@example.com" required />
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 btn-lg">Gửi mã OTP</button>
                    </form>

                    <div class="text-center mt-3">
                        <a href="/Auth/Auth" class="text-decoration-none"><i class="fa-solid fa-arrow-left me-1"></i>Quay lại đăng nhập</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />


