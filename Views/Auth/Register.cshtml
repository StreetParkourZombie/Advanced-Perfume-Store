@{
    ViewBag.Title = "Register";
}
<h2>Đăng ký</h2>
<form method="post" asp-action="Register">
    <input name="name" placeholder="Họ tên" required /><br/>
    <input name="email" type="email" placeholder="Email" required /><br/>
    <input name="password" type="password" placeholder="Mật khẩu" required /><br/>
    <button type="submit">Đăng ký</button>
</form>

@if(ViewBag.Error != null) { <p style="color:red">@ViewBag.Error</p> }
@if(ViewBag.Message != null) { <p style="color:green">@ViewBag.Message</p> }
