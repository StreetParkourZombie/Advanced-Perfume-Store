@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    var email = ViewBag.Email as string ?? string.Empty;
}

<div class="container py-5" style="min-height: 80vh; display:flex; align-items:center;">
    <div class="row justify-content-center w-100">
        <div class="col-12 col-md-8 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <div class="mb-2" style="font-size: 40px; color: #198754;"><i class="fa-solid fa-lock"></i></div>
                        <h3 class="fw-semibold mb-1">Đặt lại mật khẩu</h3>
                        <p class="text-muted mb-0">Tạo mật khẩu mới cho tài khoản <strong>@email</strong></p>
                    </div>

                    @if (!string.IsNullOrEmpty(ViewBag.Error as string))
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <form asp-action="ResetPassword" method="post" class="mt-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="email" value="@email" />
                        <div class="mb-3">
                            <label class="form-label">Mật khẩu mới</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-key"></i></span>
                                <input type="password" class="form-control" name="newPassword" id="newPassword" minlength="6" placeholder="Tối thiểu 6 ký tự" required />
                            </div>
                            <small id="strengthHint" class="text-muted">Mẹo: dùng chữ hoa, số và ký tự đặc biệt để mạnh hơn</small>
                        </div>
                        <button type="submit" class="btn btn-success w-100 btn-lg">Lưu mật khẩu</button>
                    </form>

                    <div class="text-center mt-3">
                        <a href="/Auth/Auth" class="text-decoration-none"><i class="fa-solid fa-arrow-left me-1"></i>Quay lại đăng nhập</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const input = document.getElementById('newPassword');
    const hint = document.getElementById('strengthHint');
    if (input && hint) {
        input.addEventListener('input', () => {
            const v = input.value;
            let score = 0;
            if (v.length >= 6) score++;
            if (/[A-Z]/.test(v)) score++;
            if (/[0-9]/.test(v)) score++;
            if (/[^A-Za-z0-9]/.test(v)) score++;
            const levels = ['Rất yếu','Yếu','Trung bình','Khá','Mạnh'];
            hint.textContent = 'Độ mạnh: ' + levels[score];
        });
    }
</script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />


