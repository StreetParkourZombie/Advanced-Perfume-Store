            @foreach (var p in Model.Where(x => x.Categories.Any(c => c.CategoryName.Contains("Nữ"))).Take(5))
            {
                <div class="col">
                    <div class="card product-card h-100">
                        <a href="@Url.Action("Index", "Product", new { id = p.ProductId })">
                            @if (p.ProductImages.Any())
                            {
                                var firstImage = p.ProductImages.First();
                                <img src="data:@firstImage.ImageMimeType;base64,@Convert.ToBase64String(firstImage.ImageData)" class="card-img-top" alt="@p.ProductName">
                            }
                            else
                            {
                                <img src="/images/ProductDetail/anh-1.webp" class="card-img-top" alt="@p.ProductName">
                            }
                            <div class="card-body">
                                <div class="product-title"><a href="#">@p.ProductName</a></div>
                                <div class="price-row" style="min-height: 48px;">
                                    @if (p.DiscountPrice.HasValue)
                                    {
                                        <p class="card-text text-danger mb-0">@p.DiscountPrice.Value.ToString("n0") ₫</p>
                                        <p class="card-text text-muted text-decoration-line-through mb-0">@p.Price.ToString("n0") ₫</p>
                                    }
                                    else
                                    {
