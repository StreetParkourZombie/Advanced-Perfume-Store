<script>
    // Hiệu ứng đếm số từ 0 lên số cuối
    function animateCounter(elementId, targetNumber, duration = 2000) {
        const element = document.getElementById(elementId);
        const startNumber = 0;
        const increment = targetNumber / (duration / 16); // 60fps
        let currentNumber = startNumber;
        
        const timer = setInterval(() => {
            currentNumber += increment;
            if (currentNumber >= targetNumber) {
                currentNumber = targetNumber;
                clearInterval(timer);
            }
            element.textContent = Math.floor(currentNumber);
        }, 16);
    }

    // Chạy hiệu ứng khi trang load
    document.addEventListener('DOMContentLoaded', function() {
        // Delay một chút để trang load hoàn toàn
        setTimeout(() => {
            animateCounter('count1', 7, 2000); // Nam: 7
            animateCounter('count2', 32, 2500); // Nữ: 32  
            animateCounter('count3', 12, 3000); // Unisex: 12
        }, 500);
    });
</script>