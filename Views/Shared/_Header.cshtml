<style>
    .search-container {
        position: relative;
        overflow: visible;
        #searchBox

    {
        width: 100%;
        max-width: 400px;
        min-width: 200px;
        padding: 8px 12px;
        border-radius: 10px;
        border: 1px solid #ddd;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        transition: all 0.2s ease;
    }
    /* focus */
    #searchBox:focus {
        outline: none;
        border-color: #dc3545;
        box-shadow: 0 2px 12px rgba(220,53,69,0.25);
    }
    /* suggestions đẹp hơn */
    #suggestions .list-group-item {
        border: none;
        padding: 8px 12px;
        transition: background 0.2s;
    }

        #suggestions .list-group-item:hover {
            background: #f8f9fa;
        }


    #suggestions {
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 18px rgba(0,0,0,0.15);
        max-height: 320px;
        overflow-y: auto;
        z-index: 9999;
        display: none;
    }

    .suggestion-item {
        cursor: pointer;
    }

    .top-bar, .main-header, .container {
        overflow: visible !important;
    }
</style>

<script>
    const searchBox = document.getElementById("searchBox");
    const suggestions = document.getElementById("suggestions");
    let debounceTimer;

    searchBox.addEventListener("input", () => {
        clearTimeout(debounceTimer);
        debounceTimer = setTimeout(fetchSuggestions, 250);
    });

    async function fetchSuggestions() {
        const keyword = searchBox.value.trim();
        if (keyword.length < 2) {
            suggestions.innerHTML = "";
            suggestions.style.display = "none";
            return;
        }
        try {
            const res = await fetch(`/Search/SearchProducts?keyword=${encodeURIComponent(keyword)}`);
            const data = await res.json();
            if (!data || data.length === 0) {
                suggestions.innerHTML = `<div class="list-group-item text-muted small">Không tìm thấy sản phẩm</div>`;
            } else {
                suggestions.innerHTML = data.map(p => `
                    <div class="list-group-item list-group-item-action d-flex align-items-center suggestion-item" data-href="/Product/Index/${p.id}">
                        <img src="${p.image}" style="width:45px;height:45px;object-fit:cover;border-radius:6px;margin-right:10px;">
                        <div class="flex-grow-1">
                            <div class="fw-semibold">${p.name}</div>
                            <small class="text-danger fw-bold">${p.price.toLocaleString()} ₫</small>
                        </div>
                    </div>
                `).join("");
            }
            suggestions.style.display = "block";
        } catch (err) {
            console.error(err);
            suggestions.innerHTML = `<div class="list-group-item text-muted small">Lỗi tìm kiếm</div>`;
            suggestions.style.display = "block";
        }
    }

    // Click vào suggestion
    suggestions.addEventListener("mousedown", e => {
        const item = e.target.closest(".suggestion-item");
        if (item) {
            suggestions.style.display = "none"; // ẩn ngay để giảm nhấp nháy
            window.location.href = item.dataset.href;
            e.preventDefault();
        }
    });

    // Click ngoài input/suggestions sẽ ẩn
    document.addEventListener("click", e => {
        if (!e.target.closest('#searchBox') && !e.target.closest('#suggestions')) {
            suggestions.style.display = "none";
        }
    });
</script>
