<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Orchard.vn</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"> <!-- Font Awesome Icons -->
    
    <!-- ======================================= MAIN -->

    <link rel="stylesheet" href="~/css/Account.css" asp-append-version="true" /> <!-- Account CSS-->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> <!-- Site CSS-->
    <link rel="stylesheet" href="~/css/About.css" asp-append-version="true" />  <!-- About CSS-->
    <link rel="stylesheet" href="~/css/Support.css" asp-append-version="true" /> <!-- Support CSS-->
    <link rel="stylesheet" href="~/css/Contact.css" asp-append-version="true" /> <!-- Contact CSS-->
    <link rel="stylesheet" href="~/css/ScentGroup.css" asp-append-version="true" /> <!-- ScentGroup CSS-->
    <link rel="stylesheet" href="~/css/ProductDetail.css" asp-append-version="true" />    <!-- Product Detail CSS-->
    <link rel="stylesheet" href="~/css/Checkout.css" asp-append-version="true" />  <!-- Checkout CSS-->
    <link rel="stylesheet" href="~/css/SpinWheel.css" asp-append-version="true" />  <!-- SpinWheel CSS-->

    <!-- Category CSS-->
    <link rel="stylesheet" href="~/css/Category/breadcrumb.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Category/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Category/loaihuong.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/CAtegory/sanpham.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Category/thuoctinh.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Category/thuonghieu-slider.css" asp-append-version="true" />

    <!-- ======================================= COMPONENTS CSS-->
    <link rel="stylesheet" href="~/css/Components/comment.css" asp-append-version="true" />  <!-- Comment CSS-->
    <link rel="stylesheet" href="~/css/Components/review-form.css" asp-append-version="true" />  <!-- Review Form CSS-->
    <link rel="stylesheet" href="~/css/Components/chatbot.css" asp-append-version="true" />  <!-- ChatBot CSS-->

</head>
<body>
    @await Html.PartialAsync("_Header")

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    @await Html.PartialAsync("_Footer")

    @await Html.PartialAsync("_FloatingSpinWheel")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/About.js" asp-append-version="true"></script>
    <script src="~/js/Checkout.js" asp-append-version="true"></script>
    <script src="~/js/ReviewForm.js" asp-append-version="true"></script>
    <script src="~/js/chatbot.js" asp-append-version="true"></script>
    <script src="~/js/SpinWheel.js" asp-append-version="true"></script>
    <script src="~/js/cart.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>